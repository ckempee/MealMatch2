{% extends 'base.html.twig' %}

{% block title %}MealMatch- Mes Recettes{% endblock %}

{% block stylesheets %}
{{parent()}}
<style>
.card-img-top{
  max-height:400px;
  object-fit:cover;
  
}
</style>
{% endblock %}
{% block body %}

<div class="container mt-4">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}


<div class="container">
<div class="example-wrapper">
    <h1>Mes Recettes</h1>

			<a href="{{ path('recette_creation') }}" class="btn btn-primary">
				Créer une recette</a>

 <div class="row row-cols-1 row-cols-md-3 g-4">
    {% for recette in recettes %}
    
  <div class="col">
    <div class="card">
      <img src="{{ vich_uploader_asset(recette, 'imageFile') }}" class="card-img-top"
        alt="recette de l'image"/>
      <div class="card-body">
        <h5 class="card-title">{{recette.titre}}</h5>
        <div>
			<span class="badge bg-primary">Créée le
				{{ recette.createdAt|date('d/m/Y') }}</span>
		</div>
      </div>
    </div>
  </div>
    {%endfor%}
  </div>


{# display navigation #}
<div class="navigation d-flex justify-content-center mt-4">
    {{ knp_pagination_render(recettes) }}
</div>


   
 
    
   

    
</div>
</div>
{% endblock %}
