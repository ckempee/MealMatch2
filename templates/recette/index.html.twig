{% extends 'base.html.twig' %}

{% block title %}MealMatch- Mes Recettes{% endblock %}

{% block stylesheets %}
{{parent()}}
<style>

body {
  background-color: ivory;
}
.card-img-top{
  min-height:600px;
  max-height:600px;
  
  object-fit:cover;
}
.titre{
  background-image: url('./images/mesrecettes.jpg');
  background-size: cover;
  max-width: 100%;
  height: 150px;
  margin-bottom:25px;text-align:center;
  color: black;
  
  }

h1{
 padding-top:5%;
}



</style>
{% endblock %}

{% block body %}

<div class="container mt-4">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}


<div class="container">
<div class="example-wrapper">
<div class="titre">
    <h1>Mes Recettes</h1>
</div>

			<a href="{{ path('recette_creation') }}" class="btn btn-primary mb-4">
				Créer une recette</a>

 <div class="row row-cols-1 row-cols-md-3 g-4">
    {% for recette in recettes %}
    
  <div class="col">
    <div class="card">
      <img src="{{ vich_uploader_asset(recette, 'imageFile') }}" class="card-img-top"
        alt="recette de l'image"/>
      <div class="card-body">
        <h5 class="card-title">{{recette.titre}}</h5>
        <div>
			<span class="badge bg-primary">Créée le
				{{ recette.createdAt|date('d/m/Y') }}</span>
		</div>
      </div>
    </div>
  </div>
    {%endfor%}
  </div>


{# display navigation #}
<div class="navigation d-flex justify-content-center mt-4">
    {{ knp_pagination_render(recettes) }}
</div>


   
 
    
   

    
</div>
</div>
{% endblock %}
