{% extends 'base.html.twig' %}

{% block title %}MealMatch- Mes Recettes{% endblock %}

{% block stylesheets %}
{{parent()}}
<style>

body {
  background-color: #f2f1f4;
}
.card-img-top{
  min-height:600px;
  max-height:600px;
  
  object-fit:cover;
}

/* Ajout du style pour le conteneur des boutons */
.card-buttons {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.6);
  opacity: 0;
  transition: opacity 0.5s;
}

.card {
  position: relative;
}

.card:hover .image-overlay {
  display: flex;
}

.image-overlay {
  display: none;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  justify-content: center;
  align-items: center;
}

.image-overlay .btn {
  border: 2px solid black;
  margin: 5px;
}

/* Affichage des boutons au survol de l'image */
.card:hover .card-buttons {
  opacity: 1;
}

.card-button {
  color: white;
  text-align: center;
  padding: 10px;
  cursor: pointer;
  font-size: 18px;
}

.card-button-left {
  float: left;
}

.card-button-right {
  float: right;
}

.titre{

  max-width: 100%;
  height: 180px;
  margin-bottom:25px;
  text-align:center;
  
  }
.card:hover .card-img-top {
  filter: brightness(60%) blur(1px);
}

.card:hover .image-overlay {
  display: flex;
}
h1{
 padding-top:5%;
}



</style>
{% endblock %}

{% block body %}

<div class="container mb-4">
<div class="example-wrapper">
<div class="titre" style="border-bottom:1px solid black">
    <h1 class="mb-3"> {{saison.nom}}</h1>
    {%if saison.id==6 %}
    <h6 class="mb-2"><em>  </em></h6>
    {% elseif saison.id==1 %}
    
    <h6 class="mb-2"><em> </em></h6>
    {% elseif saison.id==2 %}
    
    <h6 class="mb-2"><em></em></h6>
   
   {% elseif saison.id==3 %}
    
    <h6 class="mb-2"><em></em></h6>

    
    {% endif %}
    
</div>

		

 <div class="row row-cols-1 row-cols-md-3 g-4">
    {% for recette in saison.recettes %}
    
  <div class="col">
   <div class="card">
  <img src="{{ vich_uploader_asset(recette, 'imageFile') }}" class="card-img-top" alt="recette de l'image" />
  <div class="image-overlay">
   <a href="{{ path('recette_show', { id: recette.id }) }}"><button type="button" class="btn btn-outline-success btn-lg">Voir Recette</button></a>
  </div>

      <div class="card-body">
        <h5 class="card-title">{{recette.titre}}</h5>
        <div>
			<span class="badge bg-primary">
				{{ recette.categories}}</span>
		</div>
      </div>
    </div>
  </div>
    {%endfor%}
  </div>



    
   

    
</div>
</div>
{% endblock %}
